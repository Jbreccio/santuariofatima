{
  "name": "santuario-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "security:scan": "npm audit && snyk test",
    "docker:build": "docker build -t santuario-backend .",
    "docker:run": "docker-compose up backend",
    "migrate:up": "node -r ts-node/register ./node_modules/.bin/typeorm migration:run",
    "migrate:down": "node -r ts-node/register ./node_modules/.bin/typeorm migration:revert"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.3",
    "typeorm": "^0.3.20",
    "redis": "^4.6.12",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "swagger-ui-express": "^5.0.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "socket.io": "^4.7.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "bull": "^4.11.5",
    "ioredis": "^5.3.2",
    "@sendgrid/mail": "^7.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "snyk": "^1.1259.0"
  }
}